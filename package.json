{
  "name": "kaihatsu-monorepo",
  "version": "1.0.0",
  "description": "資機材予約システム - フロントエンド・バックエンド統合環境",
  "scripts": {
    "dev": "concurrently -k -n \"API,WEB\" -c \"cyan,magenta\" \"npm run dev:backend\" \"npm run dev:frontend:wait\"",
    "dev:backend": "npm run dev --prefix backend",
    "dev:frontend": "npm run dev --prefix frontend",
    "dev:frontend:wait": "wait-on http://localhost:3002/api/debug-routes && npm run dev:frontend",
    "build": "npm run build --prefix backend && npm run build --prefix frontend",
    "install:all": "npm install && npm install --prefix backend && npm install --prefix frontend",
    "clean": "rimraf node_modules backend/node_modules frontend/node_modules",
    "start": "npm run start --prefix backend"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.2.4",
    "@chakra-ui/react": "^3.30.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tanstack/react-query": "^5.90.10",
    "@tanstack/react-query-devtools": "^5.91.0",
    "axios": "^1.13.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.24",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "wait-on": "^8.0.1"
  }
}
